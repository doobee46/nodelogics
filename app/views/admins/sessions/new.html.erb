
<% @title = 'login' %>
<body class="login-bg">
<section>
		<div class="container">
			<div class="brand-login">
			    
			</div>
			<div class="form-wrapper">
				
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			    <%= f.input :email, placeholder: "Email", required: true, autofocus: true,input_html: { class: 'input' },label:false %>
			    <%= f.input :password, placeholder: "Password",required: false,input_html: { class: 'input' }, label:false %>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
							
				<div class="action">
					<%= f.button :submit, "Log in" , class:'btn btn-success'%>
				</div>
				<div class="form-footer">
					<h3>D'ont have an account <span><%= render "admins/shared/links" %></span></h3>
				</div>
				<% end %>
			</div>
			
		</div>
	</section>
	<div class="separator-login">
</div>
