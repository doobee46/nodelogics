<% @title = 'sign up' %>
<body class="login-bg">
<section>
		<div class="container">
			<div class="brand-login">
			</div>
			<div class="form-wrapper">
				
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= f.error_notification %>
			    <%= f.input :email, placeholder: "Email", required: true, autofocus: true,input_html: { class: 'input' },label:false %>
			    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password ",input_html: { class: 'input' }, label:false %>
			    <%= f.input :password_confirmation, placeholder: "Password Confirmation", required: true,input_html: { class: 'input' },label:false %>
							
				<div class="action">
					<%= f.button :submit, "Sign up" , class:'btn btn-success'%>
				</div>
				<div class="form-footer">
					<h3>Have an account <span> | <%= render "admins/shared/links" %></span></h3>
				</div>
				<% end %>
			</div>
			
		</div>
	</section>
	<div class="separator-login">
</div>
