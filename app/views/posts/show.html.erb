<section>
	<div class="container">
		<div class="show-post-wrapper">
			<div class='post-wrapper'>
		      <div class="post-title">
		        <h2><%= @post.title %></h2>
		      </div>
		      <div class="post-separator"></div>
		      <h5><%= @post.created_at.strftime('%b %d, %Y') %></h5>
		      <div class="post-body">
		        <p><%= raw @post.body %></p>
		     </div>			
		</div>
	</div>
</section>



