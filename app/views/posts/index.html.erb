<% @title = "blog" %>
<div class="container">
  <div>
      <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div>
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
        <h2><%= post.author %></h2>
      </div>

      <div>
        <%= raw(post.body).truncate(358) %>
      </div>

      <div >
        <%= link_to "READ MORE", post_path(post) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>